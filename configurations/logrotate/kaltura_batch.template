@LOG_DIR@/kaltura_batch.log {
    nodateext
    compress
    rotate 40
    create 644
    missingok
    notifempty
    prerotate
        service kaltura_batch stop 2>&1 >/dev/null || true
    endscript
    postrotate
        service kaltura_batch start 2>&1 >/dev/null || true
    endscript
 su root kaltura
}

@LOG_DIR@/batch/*log {
    nodateext
    compress
    notifempty
    rotate 40
    create 644
    missingok
 su root kaltura
}

