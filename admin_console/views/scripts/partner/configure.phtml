<?php $this->form->setAction($this->url(array('controller' => 'partner', 'action' => 'configure'))); ?>

<?php echo $this->form; ?>


<script type="text/javascript">
$(function(){
	$("#fieldset-publisherSpecificDeliverySettings input").each(function(inx, value){
		var $input = $(value);
		
		if( $input.attr('type') == 'checkbox') {
			$input.change(function(){
				var id = $(this).attr('id').replace('checkbox_', '');
				var $text_input = $('#' + id);
				
				if ($(this).attr("checked")) {
					$text_input.attr("disabled", false);  
			    }else{
			    	$text_input.attr("disabled", true);
			    	$text_input.val("0");
			    } 
			});
		}

		if( $input.attr('type') == 'text') {
			var id = $(this).attr('id');
			var $checkbox_input = $('#checkbox_' + id);
			
			if ($input.val() == 0) {
				$input.val("0");
				$input.attr("disabled", true);
		    }else{
		    	$input.attr("disabled", false);
		    	$checkbox_input.attr("checked", true);
		    }
		} 
	});

	var $combined_bw_max = $('#MONTHLY_STORAGE_AND_BANDWIDTH-MONTHLY_STORAGE_AND_BANDWIDTH_max');
	var $combined_bw_price = $('#MONTHLY_STORAGE_AND_BANDWIDTH-MONTHLY_STORAGE_AND_BANDWIDTH_overagePrice');
	var $combined_bw_unit = $('#MONTHLY_STORAGE_AND_BANDWIDTH-MONTHLY_STORAGE_AND_BANDWIDTH_overageUnit');

	if ($combined_bw_max.val() > 0 || $combined_bw_price.val() > 0 || $combined_bw_unit.val() > 0){
		//combined usage
		$('#mothly_bandwidth_combined-1').attr("checked", true);
		setCombinedUsage(false);					
	}else{
		//separated usage
		$('#mothly_bandwidth_combined-2').attr("checked", true);
		setCombinedUsage(true);
	} 

	$("#mothly_bandwidth_combined input").each(function(inx, value){
		var $input = $(value);


		$input.change(function(){
			if($(this).is(':checked') === true) {
		        if ($(this).val() == 1){
			        setCombinedUsage(false);
		        }else{
		        	setCombinedUsage(true);
		        	
		        }
		    }
		}); 
	});

	$('#partner_package-element select').change(function()
	{
		var $extended_free_trail = $('#extended_free_trail');
		var $extended_free_trail_expiry_date = $('#extended_free_trail_expiry_date');
		var $extended_free_trail_expiry_reason = $('#extended_free_trail_expiry_reason');
		if ($(this).val() == 1) {
			$extended_free_trail.attr("checked", false);
			$extended_free_trail.attr("disabled", false);
	    }else if ($(this).val() == 2) {
			$extended_free_trail.attr("checked", false);
			$extended_free_trail.attr("disabled", true);
			$extended_free_trail_expiry_date.attr("disabled", true);
			$extended_free_trail_expiry_date.val("0");
			$extended_free_trail_expiry_reason.attr("disabled", true);
			$extended_free_trail_expiry_reason.val("0");
	    } 
	});

	$("#partner_package-element select").each(function(inx, value){
		var $extended_free_trail = $('#extended_free_trail');
		var $extended_free_trail_expiry_date = $('#extended_free_trail_expiry_date');
		var $extended_free_trail_expiry_reason = $('#extended_free_trail_expiry_reason');
		
		if ($(this).val() == 1) {
			$extended_free_trail.attr("checked", false);
			$extended_free_trail.attr("disabled", false);
			$extended_free_trail_expiry_reason.val('');
	    }else if ($(this).val() == 2) {
			$extended_free_trail.attr("checked", false);
			$extended_free_trail.attr("disabled", true);
			$extended_free_trail_expiry_date.attr("disabled", true);
			$extended_free_trail_expiry_date.val("0");
			$extended_free_trail_expiry_reason.attr("disabled", true);
			$extended_free_trail_expiry_reason.val("0");
	    }
	});

	$('#extended_free_trail_expiry_date').change(function(){
		$('#extended_free_trail_expiry_reason').val('');
	});

	$("#fieldset-accountOptionsMonitorUsage input").each(function(inx, value){
				var $input = $(value);
				
				if( $input.attr('type') == 'checkbox') {
					$input.change(function(){
						var $expiry_date = $('#extended_free_trail_expiry_date');
						var $expiry_reason = $('#extended_free_trail_expiry_reason');
						
						if ($(this).attr("checked")) {
							$expiry_date.attr("disabled", false);
							$expiry_reason.attr("disabled", false);
							var myDate = new Date();
							var strDate =(myDate.getMonth()+1) + '/' + myDate.getDate() + '/' + myDate.getFullYear();
							$expiry_date.val(strDate);
							$expiry_reason.val('');
					    }else{
					    	$expiry_date.attr("disabled", true);
					    	$expiry_date.val("0");
					    	$expiry_reason.attr("disabled", true);
					    	$expiry_reason.val("0");
					    } 
					});

					var $expiry_date = $('#extended_free_trail_expiry_date');
					var $expiry_reason = $('#extended_free_trail_expiry_reason');
					
					if ($(this).attr("checked")) {
						$expiry_date.attr("disabled", false);
						$expiry_reason.attr("disabled", false);
						if ($expiry_date.val() == 0){
							var myDate = new Date();
							var strDate =(myDate.getMonth()+1) + '/' + myDate.getDate() + '/' + myDate.getFullYear();
							$expiry_date.val(strDate);
							$expiry_reason.val('');
						}
				    }else{
						$expiry_date.attr("disabled", true);
				    	$expiry_date.val("0");
				    	$expiry_reason.attr("disabled", true);
				    	$expiry_reason.val("0");
				    } 
				}
			});
	
	jQuery('#extended_free_trail_expiry_date').datepicker({showOn: 'both', buttonImage: '<?php echo $this->baseUrl('images/calendar.gif'); ?>', buttonImageOnly: true});
	
});

function setCombinedUsage($isCombined){
	if ($isCombined == true){
		$('#MONTHLY_STORAGE_AND_BANDWIDTH-MONTHLY_STORAGE_AND_BANDWIDTH_max').attr({value:''});
		$('#MONTHLY_STORAGE_AND_BANDWIDTH-MONTHLY_STORAGE_AND_BANDWIDTH_overagePrice').attr({value:''});
		$('#MONTHLY_STORAGE_AND_BANDWIDTH-MONTHLY_STORAGE_AND_BANDWIDTH_overageUnit').attr({value:''});
	}else{
		$('#MONTHLY_BANDWIDTH-MONTHLY_BANDWIDTH_max').attr({disabled: !$isCombined, value:''});
		$('#MONTHLY_BANDWIDTH-MONTHLY_BANDWIDTH_overagePrice').attr({disabled: !$isCombined, value:''});
		$('#MONTHLY_BANDWIDTH-MONTHLY_BANDWIDTH_overageUnit').attr({disabled: !$isCombined, value:''});
		$('#MONTHLY_STORAGE-MONTHLY_STORAGE_max').attr({disabled: !$isCombined, value:''});
		$('#MONTHLY_STORAGE-MONTHLY_STORAGE_overagePrice').attr({disabled: !$isCombined, value:''});
		$('#MONTHLY_STORAGE-MONTHLY_STORAGE_overageUnit').attr({disabled: !$isCombined, value:''});
	}
	
	$('#MONTHLY_STORAGE_AND_BANDWIDTH-MONTHLY_STORAGE_AND_BANDWIDTH_max').attr({disabled: $isCombined});
	$('#MONTHLY_STORAGE_AND_BANDWIDTH-MONTHLY_STORAGE_AND_BANDWIDTH_overagePrice').attr({disabled: $isCombined});
	$('#MONTHLY_STORAGE_AND_BANDWIDTH-MONTHLY_STORAGE_AND_BANDWIDTH_overageUnit').attr({disabled: $isCombined});
	$('#MONTHLY_BANDWIDTH-MONTHLY_BANDWIDTH_max').attr("disabled", !$isCombined);
	$('#MONTHLY_BANDWIDTH-MONTHLY_BANDWIDTH_overagePrice').attr("disabled", !$isCombined);
	$('#MONTHLY_BANDWIDTH-MONTHLY_BANDWIDTH_overageUnit').attr("disabled", !$isCombined);
	$('#MONTHLY_STORAGE-MONTHLY_STORAGE_max').attr("disabled", !$isCombined);
	$('#MONTHLY_STORAGE-MONTHLY_STORAGE_overagePrice').attr("disabled", !$isCombined);
	$('#MONTHLY_STORAGE-MONTHLY_STORAGE_overageUnit').attr("disabled", !$isCombined);
}

function openConfirm(url) {
	var dialogDiv = jQuery('<div id="confirmation-div"><?php echo $this->translate('Do you want to save your changes before leaving this page?'); ?></div>').appendTo('body');
	dialogDiv.dialog({
		bgiframe: true,
		modal: true,
		resizable: false,
		width: 350,
		title: '<?php echo $this->translate('Are you sure?'); ?>',
		height: 150,
		buttons: {
			'<?php echo $this->translate('Save Changes'); ?>': function() {
				jQuery(this).dialog('close');
				jQuery('#frmPartnerConfigure').submit();
				url += "<?php echo '/'.$this->partnerId; ?>";
				window.location = url;
			},
			'<?php echo $this->translate('Ignore Changes'); ?>': function() {
				jQuery(this).dialog('close');
				url += "<?php echo '/'.$this->partnerId; ?>";
				window.location = url;
			},
			'<?php echo $this->translate('Cancel'); ?>': function() {
				jQuery(this).dialog('close');
			}
		},
		close: function() {
			
		}
	});
}
function openChangeServicePackageAlertBox(){
	var dialogDiv = jQuery('<div id="confirmation-div"><?php echo $this->translate('Please enable/disable features according to the new agreement.'); ?></div>').appendTo('body');
	dialogDiv.dialog({
		bgiframe: true,
		modal: true,
		resizable: false,
		width: 350,
		title: '<?php echo $this->translate('Change in service package'); ?>',
		height: 150,
		buttons: {			
			'<?php echo $this->translate('OK'); ?>': function() {
				jQuery(this).dialog('close');
			}
		},
		close: function() {}
	});
}

function openViewHistory(partner_id){
	var url = '<?php echo $this->url(array('controller' => 'partner', 'action' => 'exteneded-free-trail-history', 'partner_id' => '')); ?>' + partner_id;
	var dialogDiv = jQuery('<div id="confirmation-div"></div>').appendTo('body');
	
	dialogDiv.dialog({
		bgiframe: true,
		modal: true,
		resizable: false,
		width: 750,
		title: '<?php echo $this->translate('Trail Account Extension History'); ?>',
		height: 400,
		buttons: {			
			'<?php echo $this->translate('OK'); ?>': function() {
				jQuery(this).dialog('close');
			}
		},
		close: function() {}
	});
	dialogDiv.load(
			url
		);
}
</script>
