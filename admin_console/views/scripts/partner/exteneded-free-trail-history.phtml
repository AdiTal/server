					 }
				}}?>
					</td><td>
				<?php if (@$audit->data->changedItems){
					foreach($audit->data->changedItems as $changedItems){
					 	if ($changedItems->descriptor == 'extendedFreeTrailExpiryReason'){ 
					 		echo $changedItems->newValue; 
					 		break;
						}
					}}?>
					</td><td>
				<?php if (@$audit->data->changedItems){
					foreach($audit->data->changedItems as $changedItems){
